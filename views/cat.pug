extends layout

block content
  - var cats = results;
  h1 Search Results
  div(class= "container-fluid")
    each value, index in cats
        div(class="row m-1",style ="cursor:pointer",onclick=`buy(${index + 1})`)
           - let destination = `dispatch(\"/cat/update?id=${value._id}\")` 
           div(class="col-lg-2 col-4 col-sm-2") #{value.cat_type}
           div(class="col-lg-2 col-4 col-sm-2") #{value.cat_color}
           div(class="col-lg-2 col-4 col-sm-2") #{value.cat_weight}
           button.btn( class="btn-primary ml-1", onclick= destination) Update 

  script.
     function buy(rowNo) {
       alert('You purchased item' + rowNo);
     }
     function dispatch(path){ 
       window.location.href=path 
     } 